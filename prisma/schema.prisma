// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Example model
model Test {
  id Int @default(autoincrement()) @id
  guild_id String @default("")
  value String
}

model WelcomeFeature {
  guild_id String @id
  channel_id String?
  message String @default("Welcome!")
}

model Settings {
  guild_id String @id
  prefix String @default("/")
}

model MusicFeature {
  guild_id String @id
  controller_role String?
}

model StorageFeature {
  guild_id String @id
}